{
  "compilerOptions": {
    "sourceMap": true,
    "lib": ["es2015"],
    "target": "es6",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@models/*": ["models/*"],
      "@common/*": ["common/*"]
    },
    "module": "commonjs"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}